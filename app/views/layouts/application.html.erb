<!DOCTYPE html>
<html>
  <head>
    <title>Slave Unit App</title>

  	<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">
  	<link href='https://fonts.googleapis.com/css?family=Michroma' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Share+Tech+Mono' rel='stylesheet' type='text/css'>

    	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

    	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    
  	<!-- To use Javascript from the internet -->
  	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

  	<!-- To make responsive on smartphones -->
  	<meta name="viewport" content="width=device-width, initial-scale=1">
  	<%=csrf_meta_tags %>

  </head>
  <body>
  <!-- NAVBAR and FOOTER-->
  <!-- NAVBAR -->
      <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation" id="nav">
          <div class="navhome" id="navhome">
              <a href="index" alt="logo"><%= image_tag("logo-nav2.jpg") %></a>
          </div>
          <div class="container-fluid menu">
              <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
              </div>
            <div class="navbar-collapse collapse">
              <ul class="nav navbar-nav">
                <li><a href="/static_pages/store"><span class="glyphicon glyphicon-shopping-cart"></a></li>
                <li><a href="/static_pages/about"><span class="glyphicon glyphicon-info-sign"></a></li>
                <li><a href="/static_pages/contact"><span class="glyphicon glyphicon-phone-alt"></a></li>
              </ul>
            </div>
          </div><!-- end container-fluid menu --> 
  <!-- END NAVBAR -->

  <!-- FOOTER -->
          <footer class="visible-lg-block visible-md-block" id="footer-lg">
            <div class="fb-like" data-href="https://www.facebook.com/slav3unit" data-layout="button" data-action="like" data-show-faces="true" data-share="true">
            </div><!-- end fb-like -->
            <div class="socialfooter">
              <a href="https://instagram.com/slave_unit"><%= image_tag ("instagram-logo-sm.png") %></a><a href="https://slav3unit.bandcamp.com/releases"><%= image_tag ("bc foot.png") %></a><a href="https://www.flickr.com/photos/gracinhamarco/"><%= image_tag ("flickr foot sm.png") %></a>
            </div><!-- end socialfooter -->
            <div class="footerlogo">
              <div class="footerlogoinside">
                <p>&copy SLAVE UNIT APPAREL 2015</p>
              </div>
            </div><!-- end footerlogo -->
          </footer>
    <!-- mobile footer -->
          <footer class="visible-sm-block visible-xs-block" id="footer-sm">
            <div class="fb-like-sm">
              <div class="fb-like" data-href="https://www.facebook.com/slav3unit" data-layout="button" data-action="like" data-show-faces="true" data-share="true">
              </div>
            </div><!-- end fb-like-sm -->
            <div class="socialfooter-sm">
              <a href="https://instagram.com/slave_unit"><%= image_tag ("instagram-logo-sm.png") %></a><a href="https://slav3unit.bandcamp.com/releases"><%= image_tag ("bc foot.png") %></a><a href="https://www.flickr.com/photos/gracinhamarco/"><a href="https://www.flickr.com/photos/gracinhamarco/"><%= image_tag ("flickr foot sm.png") %></a>
            </div><!-- end socialfooter-sm -->
            <div class="footerlogo-sm">
              <div class="footerlogoinside">
                <p>&copy SLAVE UNIT APPAREL 2015</p>
              </div><!-- end footerlogoinside -->
            </div><!-- end footerlogo-sm -->
    <!-- mobile footer -->
          </footer><!-- end footer visible-sm -->
  <!-- END FOOTER -->
        
      </nav>
  <!-- END NAVBAR and FOOTER-->
     
  <%= yield %>

  </body>

</html>
