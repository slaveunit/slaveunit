<form action="" method="POST">
  <script
    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-amount="<%= hidden_field_tag 'total_price', (@order_items.map{|o| o.unit_price.to_f}.inject(0){|sum,x| sum + x }) %><%= hidden_field_tag 'product_id', @order_items.first.product_id %>"
    data-name="SLAVE UNIT APPAREL CO."
    data-description="Show Me the Money"
    data-image="/128x128.png"
    data-locale="auto">
  </script>
</form>