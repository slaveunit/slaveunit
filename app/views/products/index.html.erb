<div class="store-wrapper">
  <div class="store-inner">
    
    <div class="store-title visible-lg-block visible-md-block">
      <h1>SLAVE UNIT APPAREL</h1>
      <h2>PRODUCT INDEX</h2>
      <h3>Available Late 2016</h3>
      
      <div class="store-table">
        <table>
          <thead>
            <tr>
              <th>PRODUCT NAME</th>
              <th class="store-product-image">IMAGE</th>
              
              <th class="store-product-desc">PRODUCT DESCRIPTION</th>
              <th class="store-product-colour">COLOUR</th>
              <th class="store-product-price">PRICE</th>
              
              <% if current_user.try(:admin?) %>
              <th class="store-product-actions">ACTIONS</th>
              <% end %>
              
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @products.each do |product| %>
<!-- redirect to _product in views -->
              <%= render product %>
<!-- redirect to _product in views -->
            <% end %>
          </tbody>
        </table>
      </div>

      <% if current_user.try(:admin?) %>
      <%= link_to 'New Product', new_product_path %>
      <% end %>



<!-- SHOPPING CART -->
    <h1 class="cart-text">
      <%= render 'layouts/cart_text' %>
    </h1>
<!-- SHOPPING CART -->



    </div><!-- end store-title -->

    <div class="products-index-sm">
          <div class="products-index-title-sm visible-xs-block visible-sm-block"> 
          <h1>SLAVE UNIT APPAREL</h1>
          <h2>PRODUCT INDEX</h2>
          <h3>Available Late 2016</h3>
          
          <div class="products-index-sm">
            

              <tbody>
                <% @products.each do |product| %>
    <!-- redirect to _product in views -->
                  <%= render product %>
    <!-- redirect to _product in views -->


<!-- SHOPPING CART -->
                  <%= render "product_row", product: product, order_item: @order_item %>
<!-- SHOPPING CART -->


                <% end %>
              </tbody>
            
          </div>

          <% if current_user.try(:admin?) %>
          <%= link_to 'New Product', new_product_path %>
          <% end %>

        </div><!-- end store-title-sm --> 
    </div>
  </div><!-- end store inner -->


</div><!-- end store wrapper -->


