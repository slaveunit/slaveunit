<div class="store-wrapper">

  <div class="store-inner">
<div class="store-title visible-lg-block visible-md-block">
      <h1>SLAVE UNIT APPAREL</h1>
      <h2>STORE</h2>
      <h3>Available 2016</h3>
</div>

<table>
  <thead>
    <tr>
      <th>Slave Unit Logo Tee</th>
      <th>Slave Unit Apparel logo in Share Tech Mono.</th>
      <th><%= image_tag("slave unit logo t.jpg", :class => "img-responsive") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.image_url %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>

  </div><!-- end store inner -->
  
</div><!-- end store wrapper -->