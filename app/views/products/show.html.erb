<div class="store-indivproduct">
	<div class="store-indivproductinner">

		<div class="store-indivproduct-notice">
			<h1 id="notice"><%= notice %></h1>
		</div>

		<div class="store-indivproduct-name"=>
		  <h1><%= @product.name %></h1>
		</div>


	<!-- PAPERCLIP -->
		<div>
			<h2>How it looks like:</h2>
		</div>
		<div class="store-indivproduct-photo">
			<%= image_tag @product.photo.url, :class => "img-responsive" %>
		</div>
	<!-- PAPERCLIP -->


		<div class="store-indivproduct-desc">
		  <p><%= @product.description %></p>
		  <h3>Available Late 2016</h3>
		</div>	

		<div>
		  <h2>Colour:</strong></h2>
		</div>

		<div class="store-indivproduct-color">
			<p><%= @product.colour %></p>
		</div>

<!-- PRICE -->
		<div>
		  <h2>The Small Price to Pay:</strong></h2>
		</div>
		<div class="store-indivproduct-price">
			<p>US$<%= @product.price %></p>
		</div>
<!-- PRICE -->

<!-- SIZE AND ADD TO CART BUTTONS -->
		<div class="btn-group">
	  		<button class="btn btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
	    		Sizes <span class="caret"></span>
	  		</button>
			<ul class="dropdown-menu">
			<li><a href="#">SM</a></li>
			<li><a href="#">MD</a></li>
			<li><a href="#">LG</a></li>
			</ul>
			<button type="button" class="btn btn-default btn-sm">Add to Cart</button>
		</div>
<!-- SIZE AND ADD TO CART BUTTONS -->

<!-- RATY average rating -->
			<h2>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div></h2>
<!-- RATY average rating -->

<!-- COMMENTS -->
		<% if signed_in? %>
			<h4>Review this:</h4>
			<%= form_for([@product, @product.comments.build]) do |f| %>
				<p>
					<%= f.label :body, "What do you think?" %><br>
					<%= f.text_area :body %>
				</p>	

<!-- RATY -->
				<p>Rate it:
					<div class="rating"></div>
				</p>
<!-- RATY -->

				<p>
					<%= f.submit "TRANSMIT", :class => 'btn btn-danger' %>
					
				</p>
			<% end %>
		<% end %>

<!-- RATY -->
		<div class="product_reviews">
			<% @comments.each do |comment| %>
				<div class="row">
					<hr>
					<p><%= comment.user.first_name %> <small><em><%= " #{time_ago_in_words(comment.created_at)} ago" %></em></small>
					</p>
					
					<div class="rated" data-score="<%= comment.rating %>"></div>

					<p><%= comment.body %></p>
				</div>

			<% end %>
		</div>
<!-- RATY -->
<!-- COMMENTS -->

		<div class="store-indivproduct-buttons">
			<%= link_to 'Edit', edit_product_path(@product) %> |
			<%= link_to 'Back', products_path %>
		</div>
	</div>
</div>
